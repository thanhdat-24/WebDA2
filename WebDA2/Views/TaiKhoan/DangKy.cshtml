@model WebDA2.Models.TaiKhoan

@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>
<section class=" gradient-custom">
    <div class="container py-2 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                <div class="card bg-dark text-white" style="border-radius: 1rem; margin-top:-150px;">
                    <div class="card-body p-5 text-center">
                        <div class="mb-md-5 mt-md-4">

                            <h4 class="fw-bold mb-2 text-uppercase">Đăng Ký Tài Khoản</h4>
                            @using (Html.BeginForm())
                            {

                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    @Html.LabelFor(model => model.TenDangNhap, "Tên Tài Khoản", htmlAttributes: new { @class = "" })
                                    <div data-mdb-input-init class="form-outline form-white mb-4">
                                        @Html.EditorFor(model => model.TenDangNhap, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                                        @Html.ValidationMessageFor(model => model.TenDangNhap, "", new { @class = "text-danger" })
                                        @if (ViewBag.error != null)
                                        {
                                            <p style="color:red">@ViewBag.error</p>
                                        }
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "" })
                                    <div data-mdb-input-init class="form-outline form-white mb-4">
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                        @if (ViewBag.erroremail != null)
                                        {
                                            <p style="color:red">@ViewBag.erroremail</p>
                                        }
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.MatKhau, "Mật Khẩu", htmlAttributes: new { @class = "" })
                                    <div data-mdb-input-init class="form-outline form-white mb-4">
                                        @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control form-control-lg", @type = "password", @id = "matKhau" } })
                                        @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                                    </div>
                                    <div>
                                        <input type="checkbox" id="showPassword" onclick="togglePasswordVisibility()">
                                        <label for="showPassword">Hiển thị mật khẩu</label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.SDT, "Số Điện Thoại", htmlAttributes: new { @class = "" })
                                    <div data-mdb-input-init class="form-outline form-white mb-4">
                                        @Html.EditorFor(model => model.SDT, new
                                        {
                                            htmlAttributes = new
                                            {
                                                @class = "form-control form-control-lg",
                                                placeholder = "Nhập Số Điện Thoại",
                                                maxlength = "10",
                                                pattern = @"\d{10}",  // Ràng buộc: chỉ cho phép 10 chữ số
                                                title = "Số điện thoại chỉ bao gồm 10 chữ số từ 0 đến 9."
                                            }
                                        })
                                        @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                                        @if (ViewBag.errorsdt != null)
                                        {
                                            <p style="color:red">@ViewBag.errorsdt</p>
                                        }
                                    </div>
                                </div>


                                <button data-mdb-button-init data-mdb-ripple-init class="btn btn-outline-primary btn-lg px-5" type="submit">Đăng Ký</button>
                            }

                            <div class="d-flex justify-content-center text-center mt-4 pt-1">
                                <a href="#!" class="text-white"><i class="fab fa-facebook-f fa-lg"></i></a>
                                <a href="#!" class="text-white"><i class="fa-brands fa-instagram fa-lg mx-4 px-2"></i></a>
                                <a href="#!" class="text-white"><i class="fab fa-google fa-lg"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    function togglePasswordVisibility() {
        var passwordField = document.getElementById("matKhau");
        var checkbox = document.getElementById("showPassword");
        if (checkbox.checked) {
            passwordField.type = "text";
        } else {
            passwordField.type = "password";
        }
    }
</script>
