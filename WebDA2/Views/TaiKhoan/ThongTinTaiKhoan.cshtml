@model WebDA2.Models.TaiKhoan

@{
    ViewBag.Title = "ThongTinTaiKhoan";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<div class="container my-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h2>Thông Tin Tài Khoản</h2>
        </div>
        <div class="card-body">
            <div class="text-center mb-4">
                <img src="https://via.placeholder.com/100" alt="Profile Image" class="profile_image rounded-circle border">
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="account_info limited-info">
                        <p><strong>Tên tài khoản:</strong> <span class="text-primary">@Model.TenDangNhap</span></p>
                        <p><strong>Email:</strong> <span class="text-secondary">@Model.Email</span></p>
                        <p><strong>Số điện thoại:</strong> <span class="text-secondary">@Model.SDT</span></p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="account_info limited-info">
                        <p><strong>Loại tài khoản:</strong> <span class="text-secondary">@Model.LoaiTaiKhoan</span></p>
                        <p>
                            <strong>Trạng thái:</strong>
                            @if (Model.TrangThai)
                            {
                                <span class="badge badge-success">Hoạt động</span>
                            }
                            else
                            {
                                <span class="badge badge-danger">Bị khóa</span>
                            }
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="account_info limited-info">
                        @*<p><strong>Chi nhánh:</strong> <span class="text-primary">@Model.ChiNhanh</span></p>
                        <p><strong>Địa chỉ:</strong> <span class="text-secondary">@Model.DiaChi</span></p>
                        <p><strong>Chức vụ:</strong> <span class="text-secondary">@Model.ChucVu</span></p>*@
                    </div>
                </div>
            </div>
            <div class="button_container d-flex flex-wrap justify-content-center">
                <a href="~/TaiKhoan/DangXuat" class="btn btn-danger mx-2 my-2">
                    <i class="fa-solid fa-right-from-bracket"></i> Đăng Xuất
                </a>
                <a href="~/TaiKhoan/CapNhat?id=@Model.ID_TaiKhoan" class="btn btn-success mx-2 my-2">
                    <i class="fa-solid fa-pen"></i> Chỉnh Sửa
                </a>
                @if (Model.LoaiTaiKhoan == "Admin" || Model.LoaiTaiKhoan == "QuanLy")
                {
                    <a href="@Url.Action("DangNhapAdmin", "DangNhapAdmin", new { area = "Admin" })" class="btn btn-secondary mx-2 my-2">
                        <i class="fa-solid fa-user-gear"></i> Trang Admin
                    </a>
                }
                <a href="@Url.Action("TrangChu", "Home")" class="btn btn-primary mx-2 my-2">
                    <i class="fa-solid fa-house"></i> Quay lại trang chủ
                </a>
            </div>
        </div>
    </div>
</div>