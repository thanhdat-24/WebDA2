                                <div class="row">
                                    @foreach (var item in Model.SanPhamTuongTu)
                                    {
                                        <div class="col-lg-3 col-md-4 col-sm-6">
                                            <a href="@Url.Action("SanPham_ChiTiet", "SanPham", new { id = item.IDSanPham })" class="product-card-link">
