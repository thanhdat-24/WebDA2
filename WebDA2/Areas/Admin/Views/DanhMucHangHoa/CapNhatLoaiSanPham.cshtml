@model WebDA2.Models.LoaiSanPham
@using WebDA2.Models;

@{
    ViewBag.Title = "CapNhatChiNhanh";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h1><span class="glyphicon glyphicon-edit addtop" aria-hidden="true"></span>&nbsp;&nbsp;Cập nhật chi nhánh</h1>

<div id="sub-main">
    <div class="row">
        <div class="col-xs-12 col-sm-7 col-md-8 col-lg-9">
            <ol class="breadcrumb">
                <li>Hệ thống</li>
                <li>Quản trị chi nhánh</li>
                <li class="active">Cập nhật</li>
            </ol>
        </div>
        <div class="hidden-xs col-sm-5 col-md-4 col-lg-3 text-right">
            <div class="timecount" id="current-time"></div>
        </div>
    </div>

    <div class="row margin0 space-top" style="color:white">
        <div class="option-h4 text-justify">
            <h4>Cập nhật chi nhánh</h4>
            <p>- Bạn đang chỉnh sửa thông tin chi nhánh.</p>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.HiddenFor(model => model.IDLoaiSP)

                    <div class="form-group">
                        @Html.LabelFor(model => model.TenLoaiSP, "Tên Loại Sản Phẩm", htmlAttributes: new { @class = "control-label col-xs-12 col-sm-4 col-md-3 col-lg-2" })
                        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                            @Html.EditorFor(model => model.TenLoaiSP, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập Tên Loại Sản Phẩm" } })
                            @Html.ValidationMessageFor(model => model.TenLoaiSP, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Icon, "Logo", htmlAttributes: new { @class = "control-label col-xs-12 col-sm-4 col-md-3 col-lg-2" })
                        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                            @Html.EditorFor(model => model.Icon, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập Icon" } })
                            @Html.ValidationMessageFor(model => model.Icon, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group space-top">
                        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 col-md-offset-3 col-lg-offset-2">
                            <input type="submit" value="Cập Nhật Loại Sản Phẩm" class="btn btn-success btn-lg btn-a" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    /* Phong cách tương tự như view ThemChiNhanh */
    #sub-main {
        background-color: #fff;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
        font-family: 'Arial', sans-serif;
    }

    h1 {
        font-size: 26px;
        color: #333;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
    }

        h1 .glyphicon {
            font-size: 28px;
            color: #28a745;
            margin-right: 10px;
        }

    .breadcrumb {
        background-color: transparent;
        margin-bottom: 20px;
    }

    .form-group label {
        font-weight: bold;
        color: #333;
        font-size: 16px;
    }

    .form-control {
        border-radius: 5px;
        padding: 10px;
        transition: all 0.3s ease;
    }

    .btn {
        padding: 12px 30px;
        font-size: 16px;
        font-weight: bold;
        border-radius: 5px;
        transition: background-color 0.3s ease, transform 0.3s ease;
        border: none;
    }

    .btn-success {
        background-color: #28a745;
        color: white;
    }

        .btn-success:hover {
            background-color: #218838;
            transform: translateY(-2px);
        }

        .btn-success:active {
            background-color: #1e7e34;
            transform: translateY(2px);
        }
</style>
