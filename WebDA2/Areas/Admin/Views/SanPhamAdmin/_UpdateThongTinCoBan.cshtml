@model WebDA2.Models.SanPham
@using WebDA2.Models

<style>
    .color_style {
        color: red;
        font-size: 14px;
    }
</style>

<div class="panel panel-default">
    <div class="panel-heading" style="color: Highlight;">
        <span class="glyphicon glyphicon-info-sign" aria-hidden="true">&nbsp;</span>Thông tin cơ bản sản phẩm
    </div>
    <div class="panel-body">
        <!-- Tên sản phẩm -->
        <div class="form-group">
            @Html.HiddenFor(model => model.IDSanPham, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <!-- Tên sản phẩm -->
        <div class="form-group">
            @Html.Label("Tên Sản Phẩm", htmlAttributes: new { @class = "color_style" })
            @Html.EditorFor(model => model.TenSanPham, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập Tên Sản Phẩm" } })
            @Html.ValidationMessageFor(model => model.TenSanPham, "*Tên sản phẩm không được trùng!", new { @class = "text-danger" })
        </div>

        <!-- Ảnh sản phẩm -->
        <div class="form-group">
            @Html.Label("Ảnh Sản Phẩm", htmlAttributes: new { @class = "color_style" })
            <input type="file" name="FileAnh" class="form-control" />
            @Html.ValidationMessageFor(model => model.Anh, "", new { @class = "text-danger" })
        </div>
        <!-- URL Ảnh -->
        <div class="form-group">
            @Html.LabelFor(model => model.AnhOnl, htmlAttributes: new { @class = "color_style" })
            @Html.EditorFor(model => model.AnhOnl, new { htmlAttributes = new { @class = "form-control", placeholder = "Url Ảnh" } })
            @Html.ValidationMessageFor(model => model.AnhOnl, "", new { @class = "text-danger" })
        </div>

        <!-- Size -->
        <div class="form-group">
            @Html.LabelFor(model => model.Size, htmlAttributes: new { @class = "color_style" })
            @Html.EditorFor(model => model.Size, new { htmlAttributes = new { @class = "form-control", placeholder = "Size" } })
        </div>

        <!-- Màu sắc -->
        <div class="form-group">
            @Html.Label("Xuất Xứ", htmlAttributes: new { @class = "color_style" })
            @Html.EditorFor(model => model.ThongTinSanPham, new { htmlAttributes = new { @class = "form-control", placeholder = "Quốc gia sản xuất" } })
        
            </div> <!-- Màu sắc -->
        <div class="form-group">
            @Html.Label("Màu Sản Phẩm", htmlAttributes: new { @class = "color_style" })
            @Html.EditorFor(model => model.MauSac, new { htmlAttributes = new { @class = "form-control", placeholder = "Màu Sắc" } })
        </div>

        <!-- Bảo hành -->
        <div class="form-group">
            @Html.Label("Bảo Hành", htmlAttributes: new { @class = "color_style" })
            @Html.EditorFor(model => model.BaoHanh, new { htmlAttributes = new { @class = "form-control", placeholder = "Thời gian bảo hành" } })
        </div> 
        <div class="form-group">
            @Html.Label("Sản Phẩm Hot", htmlAttributes: new { @class = "color_style" })
            @Html.EditorFor(model => model.Hot, new { htmlAttributes = new { @class = "form-control", placeholder = "Sản Phẩm nổi bật" } })
        </div>

        <!-- Dropdown cho Loại sản phẩm -->
        <div class="form-group">
            @Html.Label("Loại Sản Phẩm", htmlAttributes: new { @class = "color_style" })
            @Html.DropDownListFor(model => model.id_loaisp,
                new SelectList(ViewBag.LoaiSanPhamList, "IDLoaiSP", "TenLoaiSP"),
                "-- Chọn Loại Sản Phẩm --",
                new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.id_loaisp, "", new { @class = "text-danger" })
        </div>

        <!-- Dropdown cho Hãng sản xuất -->
        <div class="form-group">
            @Html.Label("Hãng Sản Xuất", htmlAttributes: new { @class = "color_style" })
            @Html.DropDownListFor(model => model.id_hangsx,
                new SelectList(ViewBag.HangSXList, "IDHangSX", "TenHangSX"),
                "-- Chọn Hãng Sản Xuất --",
                new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.id_hangsx, "", new { @class = "text-danger" })
        </div>
    </div>
</div>
