@model WebDA2.Models.SanPham

<div class="panel panel-default">
    <div class="panel-heading">
        <span class="glyphicon glyphicon-usd" aria-hidden="true">&nbsp;</span>Giá sản phẩm
    </div>
    <div class="panel-body">
        <div class="form-group">
            @Html.Label("Giá Vốn")
            <div class="input-group">
                @Html.EditorFor(model => model.GiaVon, new { htmlAttributes = new { @class = "form-control" } })
                <div class="input-group-addon">vnđ</div>
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Giá Góc")
            <div class="input-group">
                @Html.EditorFor(model => model.Gia, new { htmlAttributes = new { @class = "form-control" } })
                <div class="input-group-addon">vnđ</div>
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Giá Khuyến Mãi")
            <div class="input-group">
                @Html.EditorFor(model => model.GiaKhuyenMai, new { htmlAttributes = new { @class = "form-control" } })
                <div class="input-group-addon">vnđ</div>
            </div>
        </div>
    </div>
</div>
