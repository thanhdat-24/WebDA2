@model WebDA2.Models.SanPham
@using WebDA2.Models;

@{
    
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    CuaHangITEntities db = new CuaHangITEntities();
}
<div class="panel panel-default">
    <div class="panel-heading">
        <span class="glyphicon glyphicon-edit" aria-hidden="true">&nbsp;</span>Cập nhật sản phẩm
    </div>
    <div class="panel-body">
        @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <!-- Gọi partial view cho thông tin cơ bản -->
            @Html.Partial("_UpdateThongTinCoBan", Model)

            <!-- Gọi partial view cho thông tin giá -->
            @Html.Partial("_UpdateThongTinGia", Model)

            <!-- Gọi partial view cho thông tin chi tiết -->
            @Html.Partial("_UpdateThongTinChiTiet", Model)

            <button type="submit" class="btn btn-primary">Cập nhật sản phẩm</button>
        }
    </div>
</div>


