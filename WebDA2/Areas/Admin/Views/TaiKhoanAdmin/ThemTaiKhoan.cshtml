@model WebDA2.Models.TaiKhoan
@{
    ViewBag.Title = "ThemTaiKhoan";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1><span class="glyphicon glyphicon-user addtop" aria-hidden="true"></span>&nbsp;&nbsp;Thêm tài khoản</h1>

<div id="sub-main">
    <div class="row">
        <div class="col-xs-12 col-sm-7 col-md-8 col-lg-9">
            <ol class="breadcrumb">
                <li>Hệ thống</li>
                <li>Tài khoản</li>
                <li class="active">Thêm mới</li>
            </ol>
        </div>
        <div class="hidden-xs col-sm-5 col-md-4 col-lg-3 text-right">
            <div class="timecount" id="current-time"></div>
        </div>
    </div>
    <div class="row margin0 space-top" style="color:white">
        <div class="option-h4 text-justify">
            <h4>Thêm mới tài khoản</h4>
            <p>- Bạn đang tạo một tài khoản mới để sử dụng trong hệ thống quản trị.</p>

            @using (Html.BeginForm("ThemTaiKhoan", "TaiKhoanAdmin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <!-- Tên Đăng Nhập -->
            <div class="form-group">
                @Html.LabelFor(model => model.TenDangNhap, "Tên đăng nhập", htmlAttributes: new { @class = "control-label col-xs-12 col-sm-4 col-md-3 col-lg-2" })
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                    @Html.EditorFor(model => model.TenDangNhap, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên đăng nhập" } })
                    @Html.ValidationMessageFor(model => model.TenDangNhap, "", new { @class = "text-danger" })
                    @if (ViewBag.errorTenDangNhap != null)
                    {
                        <span class="text-danger">@ViewBag.errorTenDangNhap</span>
                    }
                </div>
            </div>

            <!-- Mật Khẩu -->
            <div class="form-group">
                @Html.LabelFor(model => model.MatKhau, "Mật khẩu", htmlAttributes: new { @class = "control-label col-xs-12 col-sm-4 col-md-3 col-lg-2" })
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                    <input type="password" name="MatKhau" class="form-control" placeholder="Nhập mật khẩu" />
                    @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Nhập lại mật khẩu", htmlAttributes: new { @class = "control-label col-xs-12 col-sm-4 col-md-3 col-lg-2" })
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                    <input type="password" name="MatKhauLai" class="form-control" placeholder="Nhập lại mật khẩu" />
                    <span class="text-danger">@ViewBag.errorMatKhauLai</span>
                </div>
            </div>
            <!-- Email -->
            <div class="form-group">
                @Html.LabelFor(model => model.Email, "Email", htmlAttributes: new { @class = "control-label col-xs-12 col-sm-4 col-md-3 col-lg-2" })
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập email" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Số điện thoại -->
            <div class="form-group">
                @Html.LabelFor(model => model.SDT, "Số điện thoại", htmlAttributes: new { @class = "control-label col-xs-12 col-sm-4 col-md-3 col-lg-2" })
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                    @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập số điện thoại" } })
                    @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                </div>
            </div>
            <!-- Loại Tài Khoản -->
            <div class="form-group">
                @Html.LabelFor(model => model.LoaiTaiKhoan, "Loại tài khoản", htmlAttributes: new { @class = "control-label col-xs-12 col-sm-4 col-md-3 col-lg-2" })
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                    <select name="LoaiTaiKhoan" class="form-control">
                        <option value="">--- Chọn loại tài khoản ---</option>
                        <option value="Admin">Admin</option>
                        <option value="Quanly">Quản lý</option>
                        <option value="NhanVien">Nhân Viên</option>
                        <option value="User">User</option>
                    </select>
                    @Html.ValidationMessageFor(model => model.LoaiTaiKhoan, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Nút Submit -->
            <div class="form-group space-top">
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 col-md-offset-3 col-lg-offset-2">
                    <input type="submit" value="Thêm mới" class="btn btn-danger btn-lg btn-a" />
                    <a href="@Url.Action("DanhSachTaiKhoan", "TaiKhoanAdmin")" class="btn btn-default btn-lg">Hủy</a>
                </div>
            </div>
        </div>
            }
        </div>
    </div>
</div>
